{
	"manifest_version": 3,
	"name": "Chat WPP Plus",
	"version": "1.0",
	"description": "Syntax Highlighting, Code Copying, UI Customizations, and other cool stuff for WPP Imagine AI Creative Studio Chat :)",
	"homepage_url": "https://github.com/tmbug/chat-wpp-plus",
	"content_scripts": [
	  {
		"matches": ["https://imagine.wpp.ai/chat/*"],
		"css": ["styles.css"],
		"js": ["github-dark-css.js","highlight.min.js", "content.js"],
		"run_at": "document_idle"
	  }
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	  }
	  
	}